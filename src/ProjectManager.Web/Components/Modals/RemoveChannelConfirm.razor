<div class="modal fade" id="deleteChannelConfirm" tabindex="-1" aria-labelledby="deleteChannelConfirm" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content pm-modal-container">
            <div class="modal-header pm-modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete channel</h5>
                <span class="fa-solid fa-xmark cross" data-bs-dismiss="modal" aria-label="Close"></span>
            </div>
            <div class="modal-body">
                @if (ChatChannel != null)
                {
                    <div class="channel-tab">
                    # @ChatChannel.Name
                    </div>
                    @if (ChatChannel.Messages != null)
                    {
                        <h6>...and its @ChatChannel.Messages.Count() messages?</h6>
                    }
                }
            </div>
            <div class="modal-footer pm-modal-footer">
                <button type="button" class="pm-modal-btn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="pm-modal-btn" @onclick="DeleteChannel">Delete</button>
            </div>
        </div>
    </div>
</div>